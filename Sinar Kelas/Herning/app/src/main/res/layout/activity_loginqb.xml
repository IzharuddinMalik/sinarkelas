<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_login_activity"
    style="@style/MatchParent"
    android:layout_marginLeft="@dimen/padding_start"
    android:orientation="vertical">

    <TextView
        style="@style/MatchWidth"
        android:paddingTop="@dimen/padding_actionbar"
        android:text="@string/text_welcoming_message"
        android:id="@+id/tvWelcomingVideo"/>

    <EditText
        android:id="@+id/userLoginEditText"
        style="@style/MatchWidth"
        android:hint="Masukkan Nama Anda"
        android:paddingTop="@dimen/_16sdp"
        android:singleLine="true"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/userFullNameEditText"
        style="@style/MatchWidth"
        android:hint="Kode Video Kelas"
        android:paddingTop="@dimen/_16sdp"
        android:singleLine="true"
        android:textSize="16sp"/>
</LinearLayout>