<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/logout"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kamu akan keluar dari aplikasi?"
        android:textColor="@color/blackTextSinar"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvDialogKeluar"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardBackgroundColor="@color/maroonSinar3"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDialogKeluar"
            android:text="Keluar"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_12ssp"
            android:layout_margin="@dimen/_10sdp"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDialogTidakJadi"
        android:text="Tidak Jadi"
        android:textColor="@color/maroonSinar3"
        android:textSize="@dimen/_12ssp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

</LinearLayout>