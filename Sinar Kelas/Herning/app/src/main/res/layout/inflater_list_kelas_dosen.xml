<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blueColor"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp"
    android:id="@+id/cvListKelasDosen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvListNamaKelas"
            android:text="Nama Kelas"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvListDeskripsiKelas"
            android:text="Deskripsi Kelas"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvListNamaDosenKelas"
            android:text="Nama Dosen"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>