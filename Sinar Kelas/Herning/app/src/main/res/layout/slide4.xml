<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/whiteColor">


    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/logosinarkelas"
        android:id="@+id/ivFotoIntro4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teksIntro4"
        android:text="Video Conference"
        android:textAlignment="center"
        android:textColor="@color/blackTextSinar"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDeskripsiIntro4"
        android:text="Guru/Dosen bisa membuat video conference group dengan kelas yang di kelola, tidak perlu platform tambahan untuk mengadakan video conference"
        android:textAlignment="center"
        android:textColor="@color/blackTextSinar"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_20sdp"/>
</LinearLayout>