<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboardhome.GetListAgendaActivity"
    android:orientation="vertical"
    android:background="@color/whiteBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_7sdp"
        app:cardBackgroundColor="@color/maroonSinar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Agenda Anda"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/whiteColor"
                android:layout_weight="1"
                android:id="@+id/tvJudulListAgenda"/>

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/ivBackListAgenda"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="@color/whiteColor"
        android:layout_margin="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

        <com.mikelau.views.shimmer.ShimmerRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/svListAgenda"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>